{% extends 'layouts/main.twig' %}
{% block content %}
    {% set class = 'required' %}
    {% if (user.id != null) %}
        {% set class = 'disabled' %}
    {% endif %}
<form method="post" class="form">
    <div class="form__field">
        <label class="label" for="username">{{ translate.t('ru', 'username') }}</label>
        <input id="username" class="input" name="username" type="text" required
               value="{{ user.username }}"
        >
    </div>
    <div class="form__field">
        <label class="label" for="password">{{ translate.t('ru', 'password') }}</label>
        <input class="input" id="password" name="password" type="password"
           {{ class }}
        >
    </div>

    <div class="form__field">
        <label class="label" for="last_name">{{ translate.t('ru', 'last name') }}</label>
        <input class="input" id="last_name" name="last_name" type="text"
            value="{{ user.last_name }} "
        >
    </div>
    <div class="form__field">
        <label class="label" for="first_name">{{ translate.t('ru', 'first name') }}</label>
        <input class="input" id="first_name" name="first_name" type="text"
           value="{{ user.first_name }}"
        >
    </div>

    <div class="form__field">
        <label class="label" for="second_name">{{ translate.t('ru', 'second name') }}</label>
        <input class="input" id="second_name" name="second_name" type="text"
           value="{{ user.second_name }}"
        >
    </div>

    <div class="form__field">
        <label class="label" for="email">{{ translate.t('ru', 'email') }}</label>
        <input class="input" id="email" name="email" type="email"
           value="{{ user.email }}"
        >
    </div>

    <div class="form__field">
        <label class="label" for="phone">{{ translate.t('ru', 'phone') }}</label>
        <input class="input" id="phone" name="phone"
           value="{{ user.phone }}"
        >
    </div>

    <div class="flex">
        <button type="submit" class="form__button save">
            {{ translate.t('ru', 'save') }}
        </button>
        <button type="button" class="form__button cancel"
            data-href="/{{ controller }}">
            {{ translate.t('ru', 'cancel') }}
        </button>
    </div>
</form>
{% endblock %}


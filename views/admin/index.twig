{% extends "layouts/main.twig" %}

{% block promo %}
    <div class="product-top-panel">
        <div class="container">
            <h3 class="top-panel-h3">
                <a class="breadcrumbs-a" href="/{{ controller }}">{{ controller }}</a>
            </h3>
            <nav class="breadcrumbs">
                <a class="breadcrumbs-a" href="/">Home</a><span>/</span>
                <a class="breadcrumbs-a now" href="/{{ controller }}">/{{ controller }}</a>
            </nav>
        </div>
    </div>
{% endblock %}

{% block content %}

<div class="container my-account">

    <div class="nav__panel">
        <div class="nav__element redirect" data-href="/{{ controller }}/orders">ORDERS</div>
        <div class="nav__element redirect" data-href="/{{ controller }}/users">USERS</div>
        <div class="nav__element redirect" data-href="/{{ controller }}/products">PRODUCTS</div>
    </div>


    <div class="my-data_container">
        {% block data %}{% endblock %}
    </div>
</div>
{% endblock %}
{% extends "layouts/admin.twig" %}

{% block data %}
    <h3 class="text_center text_uppercase action-name">{{ translate.t('ru', 'orders' ) }}</h3>
    <table class="table">
        <thead class="table__head">
        <tr class="head__row">
            <th class="head__cell">{{ translate.t('ru', 'id') }}</th>
            <th class="head__cell">{{ translate.t('ru', 'fio') }}</th>
            <th class="head__cell">{{ translate.t('ru', 'price') }}</th>
            <th class="head__cell">{{ translate.t('ru', 'count') }}</th>
            <th class="head__cell">{{ translate.t('ru', 'email') }}</th>
            <th class="head__cell">{{ translate.t('ru', 'address') }}</th>
            <th class="head__cell">{{ translate.t('ru', 'order status') }}</th>
            <th class="head__cell">{{ translate.t('ru', 'products') }}</th>
            <th class="head__cell"></th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr class="table__row text_center" data-href="/{{ controller }}/order?id={{ order.id }}">
                <td class="table__cell">{{ order.id }}</td>
                <td class="table__cell">{{ order.fio }}</td>
                <td class="table__cell">{{ order.price }}</td>
                <td class="table__cell">{{ order.count }}</td>
                <td class="table__cell">{{ order.email }}</td>
                <td class="table__cell">{{ order.address }}</td>
                <td class="table__cell">{{ status[order.status] }}</td>
                <td class="table__cell">
                    <div class="products__small flex items_center">
                        {% for product in order.products %}
                            <a class="link" href="/products/view?id={{ product.id }}">
                                <img class="image" src="/assets/{{ product.photo }}" alt="photo">
                            </a>
                        {% endfor %}
                    </div>
                </td>

                <td class="table__cell">
                    {% if order.status != constant('STATUS_CANCEL', model) %}
                        {% if order.status != constant('STATUS_SEND', model) %}
                            <i class="btn delete far fa-check"
                               data-href="/{{ controller }}/checkOrder?id={{ order.id }}"
                            ></i>
                        {% endif %}
                        <i class="btn delete far fa-ban"
                           data-href="/{{ controller }}/cancelOrder?id={{ order.id }}"
                        ></i>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}